{
    "description": "This schema describes version 20210905 of the Motif Land Metadata Standard",
    "title": "MotifLand20210905",
    "$id": "https://motif.foundation/schemas/MotifLandMetadata.json",
    "type": "object",
    "properties": {
        "assetType": {
            "description": "Motif Asset Type",
            "examples": [
                "item"
            ],
            "type": "string"
        },
        "blockchain": {
            "description": "Blockchain of the NFT land under the land type",
            "examples": [
                "Motif"
            ],
            "type": "string"
        },
        "name": {
            "description": "Name of the NFT Land",
            "examples": [
                "Land parcel 12,56"
            ],
            "type": "string"
        },
        "description": {
            "description": "Description of the NFT Land",
            "examples": [
                "Land description"
            ],
            "type": "string"
        }, 
        "city": {
            "description": "City of the NFT Land",
            "examples": [
                "Motif city"
            ],
            "type": "string"
        }, 
        "landData": {
            "description": "Data specific to the land in json string",
            "examples": [
                ""
            ],
            "type": "string"
        }, 
        "mimeType": {
            "description": "MimeType of NFT Land Poster",
            "examples": [
                "image/png"
            ],
            "type": "string"
        },     
        "version": {
            "description": "Version of the schema ",
            "examples": [
                "motif-MotifLand20210905"
            ],
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
    	  "assetType",
        "blockchain",
        "name",
        "description",
        "city", 
        "mimeType", 
        "version"
    ]
}
